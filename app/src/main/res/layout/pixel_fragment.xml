        android:textAlignment="textStart"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/easy_grey"
        android:text="Двойная камера 12.20 МП/16 МП, автофокус"
        android:textAlignment="textStart"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/easy_grey"
        android:text="память 128 Гб, без слота для карт памяти"
        android:textAlignment="textStart"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/easy_grey"
        android:text="3G, 4G LTE, LTE-A, Wi-Fi, Bluetooth, NFC, GPS,"
